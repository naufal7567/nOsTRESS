<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dasboard"
    tools:context=".fragment_info_stres.MengelolaStresFragment">

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        app:ci_drawable="@drawable/circle_indicator"
        />
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_gejala_stres"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tv_title"
        android:layout_above="@+id/indicator"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.5"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/poppins_bold"
        android:text="Cara mengelola Stres"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="26dp"/>

</RelativeLayout>