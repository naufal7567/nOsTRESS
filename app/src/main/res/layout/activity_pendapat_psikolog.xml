<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bg_dasboard"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PendapatPsikologActivity">

    <TextView
        android:id="@+id/tvTitle_Solusi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.5"
        android:textAllCaps="true"
        android:gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:text="Pendapat Psikolog"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="24dp"
        />

    <ImageView
        android:visibility="visible"
        android:background="@color/black"
        android:id="@+id/ivThumbnail1"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="300dp"
        android:src="@drawable/ic_play"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/tvTitle_Solusi"
        />
    <VideoView

        android:visibility="invisible"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_below="@id/tvTitle_Solusi"
        android:layout_marginTop="34dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/videoView1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoView1"
        android:text="Pengertian Stres"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_judul"
        />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_judul"
        android:textAlignment="center"
        android:text="Oleh\nTitin Florentina P., M. Psi., Psikolog"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        />


